<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расскажите о своем цикле"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Средняя длина цикла (в днях)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cycleLengthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Оставьте 28, если не знаете"
            android:inputType="number"
            android:background="@drawable/field_light_green"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Средняя длина менструации (в днях)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/menstruationLengthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="5"
            android:inputType="number"
            android:background="@drawable/field_light_green"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отметить первый день последней менструации (опционально)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lastPeriodDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите дату"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/field_light_green"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продолжить"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_pink_rounded"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>


