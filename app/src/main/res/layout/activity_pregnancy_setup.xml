<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройка беременности"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:fontFamily="sans-serif" />

        <!-- Карточка с формой -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/light_green_card"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Выбор метода расчета -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Как рассчитать срок беременности?"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif" />

                <RadioGroup
                    android:id="@+id/methodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/methodLastPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="По дате последних месячных"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:checked="true"
                        android:fontFamily="sans-serif" />

                    <RadioButton
                        android:id="@+id/methodConception"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="По дате зачатия"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif" />

                    <RadioButton
                        android:id="@+id/methodWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Уже знаю неделю беременности"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif" />

                </RadioGroup>

                <!-- Кнопка выбора даты последних месячных -->
                <Button
                    android:id="@+id/lastPeriodButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_pink_rounded"
                    android:text="Выбрать дату последних месячных"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

                <!-- Кнопка выбора даты зачатия -->
                <Button
                    android:id="@+id/conceptionButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_pink_rounded"
                    android:text="Выбрать дату зачатия"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:fontFamily="sans-serif" />

                <!-- Поле для ввода недели -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Текущая неделя беременности:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif" />

                <EditText
                    android:id="@+id/weekEditText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="16dp"
                    android:inputType="number"
                    android:hint="Введите неделю (1-42)"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:fontFamily="sans-serif" />

                <!-- Предполагаемая дата родов -->
                <TextView
                    android:id="@+id/dueDateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif" />

                <!-- Кнопка продолжить -->
                <Button
                    android:id="@+id/continueButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/button_yellow_green"
                    android:text="Продолжить"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

